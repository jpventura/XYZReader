<resources>
    <style name="Base.Theme.Bacon" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Base.Theme.Bacon.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColor">@color/text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bacon" parent="Base.Theme.Bacon">
        <item name="toolbarStyle">@style/Widget.Bacon.Toolbar</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="Base.Theme.Bacon">
        <item name="toolbarStyle">@style/Widget.Bacon.Toolbar</item>
    </style>

     <style name="Widget.Bacon.Toolbar" parent="Theme.AppCompat.NoActionBar">
         <item name="android:background">?attr/colorPrimary</item>
         <item name="android:minHeight">?attr/actionBarSize</item>
         <item name="android:textColor">@android:color/white</item>
     </style>

    <style name="Widget.Bacon.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Bacon.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingMultiplier">@fraction/text_line_spacing_body_1</item>
        <item name="android:layout_marginLeft">@dimen/text_body_layout_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_body_layout_margin_horizontal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Bacon.Body1" parent="Base.Theme.Bacon">
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:lineSpacingMultiplier">@fraction/text_line_spacing_body_1</item>
        <item name="android:layout_marginLeft">@dimen/text_body_layout_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_body_layout_margin_horizontal</item>
    </style>

    <style name="TextAppearance.Bacon.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginLeft">@dimen/text_body_layout_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_body_layout_margin_horizontal</item>
        <item name="android:lineSpacingMultiplier">@fraction/text_line_spacing_body_1</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
